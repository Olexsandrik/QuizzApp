{
	"$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"quoteStyle": "double"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "off",
				"useEnumInitializers": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noUnusedVariables": "warn"
			},
			"complexity": {
				"noUselessElse": "off"
			}
		}
	},
	"organizeImports": { "enabled": true },
	"files": {
		"ignore": ["node_modules", "dist", "generated", "frontend"]
	}
}
