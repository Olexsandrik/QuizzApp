{
	"name": "backend",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "ts-node ./scripts/build.ts",
		"clean-install": "rm -rf ./node_modules && rm -r package-lock.json && npm i",
		"dev": "NODE_ENV=development ts-node src/server.ts",
		"dev:hot": "nodemon --exec \"npm run dev\" --watch ./src --ext .ts",
		"server": "nodemon --exec \"NODE_ENV=development ts-node\" src/server.ts --watch ./src --ext .ts",
		"lint": "eslint .",
		"start": "NODE_ENV=production node -r ./config.js ./dist",
		"test": "NODE_ENV=test vitest",
		"type-check": "tsc -b --noEmit"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"dependencies": {
		"@prisma/adapter-pg": "^5.22.0",
		"@prisma/client": "^5.22.0",
		"dotenv": "^17.2.3",
		"express": "^4.18.2",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@prisma/engines": "^5.22.0",
		"@types/express": "^4.17.21",
		"@types/node": "^20.0.0",
		"nodemon": "^3.1.11",
		"prisma": "^5.22.0",
		"ts-node": "^10.9.0",
		"tsx": "^4.21.0",
		"typescript": "^5.0.0"
	}
}
