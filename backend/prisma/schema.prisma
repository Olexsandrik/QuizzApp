generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["quizz"]
}

model options {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  question_id String    @db.Uuid
  text        String
  is_correct  Boolean?  @default(false)
  questions   questions @relation(fields: [question_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_question")

  @@index([question_id], map: "idx_options_question_id")
  @@schema("quizz")
}

model questions {
  id      String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  quiz_id String        @db.Uuid
  type    question_type
  text    String
  order   Int
  options options[]
  quizzes quizzes       @relation(fields: [quiz_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_quiz")

  @@index([quiz_id], map: "idx_questions_quiz_id")
  @@schema("quizz")
}

model quizzes {
  id         String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title      String
  created_at DateTime?   @default(now()) @db.Timestamptz(6)
  questions  questions[]

  @@schema("quizz")
}

enum question_type {
  boolean
  input
  checkbox

  @@schema("quizz")
}
